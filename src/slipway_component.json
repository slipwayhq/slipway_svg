{
  "publisher": "slipwayhq",
  "name": "svg",
  "description": "Renders SVG to a canvas.",
  "version": "0.0.1",
  "input": {
    "properties": {
      "width": {
        "type": "uint32"
      },
      "height": {
        "type": "uint32"
      },
      "svg": {
        "type": "string",
        "metadata": {
          "description": "SVG string."
        }
      }
    },
    "optionalProperties": {
      "background_color": {
        "type": "string",
        "metadata": {
          "description": "Background color."
        }
      },
      "scale": {
        "type": "boolean"
      }
    }
  },
  "output": {
    "properties": {
      "canvas": {
        "properties": {
          "width": {
            "type": "uint32"
          },
          "height": {
            "type": "uint32"
          },
          "data": {
            "type": "string",
            "metadata": {
              "description": "Base64 encoded vector of RGBA unsigned bytes."
            }
          }
        }
      }
    }
  }
}
